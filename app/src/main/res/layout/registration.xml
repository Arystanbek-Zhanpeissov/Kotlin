<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/usernameText"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/username" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="90dp" android:layout_marginStart="90dp"/>
    <TextView
            android:text="Enter your password"
            android:layout_width="180dp"
            android:layout_height="wrap_content" android:id="@+id/passwordText"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="90dp"
            android:layout_marginStart="90dp" android:textSize="18sp" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/usernameText"/>
    <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="90dp" android:layout_marginStart="90dp" tools:text="Your Password"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/passwordText"/>
    <TextView
            android:text="or if you have account"
            android:layout_width="180dp"
            android:layout_height="wrap_content" android:id="@+id/textForAuthorization"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="90dp" android:layout_marginStart="90dp" android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/createAccount" android:layout_marginTop="12dp"/>
    <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content" android:text="Create account"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="90dp" android:layout_marginStart="90dp"
            android:id="@+id/createAccount" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/password"/>
    <Button
            android:text="Sign in"
            android:layout_width="180dp"
            android:layout_height="wrap_content" android:id="@+id/signIn"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="90dp" android:layout_marginStart="90dp"
            app:layout_constraintTop_toBottomOf="@+id/textForAuthorization" android:layout_marginTop="12dp"
    />
    <TextView
            android:text="Enter your username"
            android:layout_width="180dp"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="90dp"
            android:layout_marginStart="90dp" android:layout_marginTop="120dp" android:id="@+id/username"
            android:textSize="18sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>