<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="Enter your username"
            android:layout_width="180dp"
            android:layout_height="wrap_content" android:id="@+id/usernameText"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="90dp"
            android:layout_marginStart="90dp" android:autoText="false"
            android:textSize="18sp" android:clickable="true" android:textColor="#000000"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/welcome"/>
    <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content" android:text="Sign in"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="90dp" android:layout_marginStart="90dp"
            android:id="@+id/signIn" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/password" android:textColor="#000000"/>
    <TextView
            android:text="or if you don't have account"
            android:layout_width="180dp"
            android:layout_height="wrap_content" android:id="@+id/textForRegistration"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="90dp" android:layout_marginStart="90dp" android:autoText="false"
            android:textSize="14sp" android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/signIn"
            android:textColor="#000000"/>
    <Button
            android:text="Sign up"
            android:layout_width="180dp"
            android:layout_height="wrap_content" android:id="@+id/signUp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="90dp" android:layout_marginStart="90dp" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textForRegistration"
            android:textColorHighlight="#FFFFFF" android:textColor="#000000"
    />
    <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="90dp" android:layout_marginStart="90dp" tools:text="Your Password"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/passwordText"/>
    <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/username"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="90dp" android:layout_marginStart="90dp"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/usernameText"/>
    <TextView
            android:text="Enter your password"
            android:layout_width="180dp"
            android:layout_height="wrap_content" android:id="@+id/passwordText"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="90dp"
            android:layout_marginStart="90dp" android:autoText="false"
            android:textSize="18sp" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/username" android:textColor="#000000"/>
    <TextView
            android:text="Welcome to out Hotel"
            android:layout_width="180dp"
            android:layout_height="wrap_content" android:id="@+id/welcome"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="90dp"
            android:layout_marginStart="90dp"
            android:textColor="#000000" android:textSize="18sp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="100dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>