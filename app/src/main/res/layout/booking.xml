<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:text="Choosen Out Date"
            android:layout_width="180dp"
            android:layout_height="wrap_content" android:id="@+id/textOutDate"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="90dp" android:layout_marginStart="90dp" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/chooseOutDate"/>
    <Button
            android:text="Choose Out Date"
            android:layout_width="180dp"
            android:layout_height="40dp" android:id="@+id/chooseOutDate"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="90dp" android:layout_marginStart="90dp" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textInDate"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars" android:id="@+id/avatar"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="116dp" android:layout_marginStart="116dp" android:layout_marginTop="100dp"
            tools:src="@tools:sample/avatars"/>
    <TextView
            android:text="Choosen In Date"
            android:layout_width="180dp"
            android:layout_height="wrap_content" android:id="@+id/textInDate"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="90dp" android:layout_marginStart="90dp" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/chooseInDate"/>
    <Button
            android:text="Choose In Date"
            android:layout_width="180dp"
            android:layout_height="wrap_content" android:id="@+id/chooseInDate"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="90dp" android:layout_marginStart="90dp"
            android:layout_marginTop="42dp" app:layout_constraintTop_toBottomOf="@+id/avatar"/>
    <Button
            android:text="Booking"
            android:layout_width="180dp"
            android:layout_height="wrap_content" android:id="@+id/booking"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="90dp" android:layout_marginStart="90dp" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textOutDate"/>
</androidx.constraintlayout.widget.ConstraintLayout>